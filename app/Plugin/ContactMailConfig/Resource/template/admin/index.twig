{% extends 'default_frame.twig' %}

{% set menus = ['mail_config', 'plugin_ContactMailConfig_index'] %}

{% block title %}メール送信設定{% endblock %}
{% block sub_title %}メール送信設定{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block javascript %}


{% endblock javascript %}

{% block main %}

<form name="mail_config" role="form" id="mail_config" method="post" action="{{ url('plugin_ContactMailConfig_config') }}">
    {{ form_widget(form._token) }}
    <div class="row" id="aside_wrap">
        <div id="detail_wrap" class="col-md-9">
            <div id="detail_box" class="box form-horizontal">
                <div id="detail_box__header" class="box-header">
                    <h3 class="box-title">問い合わせメール設定</h3>
                </div><!-- /.box-header -->
                <div id="detail_box__body" class="box-body">
                    {{ form_row(form.subject) }}
                    {{ form_row(form.bcc) }}
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
        <div id="common_box" class="col-md-3">
            <div class="col_inner" id="aside_column">
                <div id="common_button_box" class="box no-header">
                    <div id="common_button_box__body" class="box-body">
                        <div  class="row">
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <div id="common_button_box__insert_button" class="row text-center">
                                        <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                            <button class="btn btn-primary btn-block btn-lg" onclick="document.form1.submit();">登録</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div><!-- /.col -->
    </div>


</form>

{% endblock main %}